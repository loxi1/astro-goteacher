}
const images = [
  'https://media.istockphoto.com/id/1051143636/vector/black-friday-sale-with-tag.jpg?s=1024x1024&w=is&k=20&c=12L2tg1hTI6r7ufEUZ6ktm3K3CMXHf60yBrb4LukbYQ=',
