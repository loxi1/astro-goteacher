---
// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - UI
import FormHero from '../components/blocks/hero/ContactHero.astro'
import ContactCards from '../components/blocks/nosotros/Estrategia.astro'

// Content
// - SEO
const SEO = {
	title: 'GOTeacher | Nosotros',
	description:
		'Somos un grupo de egresados de la Universidad Nacional de Ingeniería dedicados a la enseñanza personalizada de matemáticas para estudiantes escolares y universitarios. Contamos con más de 20 años de experiencia y 30,000 clientes satisfechos. Nuestro enfoque se basa en fortalecer el desarrollo académico y personal a través de clases impartidas por asesores especialistas. Nuestra misión es fomentar la confianza y habilidades matemáticas de cada estudiante, y nuestra visión es crear un espacio inclusivo y motivador con excelencia académica y pasión por el aprendizaje.'
}
// - Page Header
const header = {
	title: '<strong>Nosotros</strong>.',
	text: "Somos un grupo de egresados de la Universidad Nacional de Ingeniería que nos dedicamos a la enseñanza de las matemáticas buscando el desarrollo personal y profesional, brindamos conocimientos básicos y avanzados, dirigidos a estudiantes Escolares y Universitarios.",
    texto: "Nuestros asesores son especialistas en cada materia de las matemáticas y transmiten sus conocimientos con facilidad para un mejor aprendizaje."
}
---

<Layout title={SEO.title} description={SEO.description}>
	<FormHero
		title={header.title}
		text={header.text}
        texto={header.texto}
		id="contact"
		classes="bg-neutral-50 dark:bg-neutral-950/80"
	/>
	<ContactCards title='Estrategias' text='Para alcanzar un aprendizaje significativo y sostenido, es fundamental implementar un conjunto de estrategias bien definidas que favorezcan tanto el desarrollo individual como el colectivo' classes="dark:bg-neutral-950/80" data={[]} />
</Layout>
