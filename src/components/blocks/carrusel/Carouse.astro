---
// Basic Dark Testimonial section
// ------------
// Description: A centered testimonial section that contains: a quote, a caption and a cite in a dark section with a background image.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// Importamos el componente Carousel
import Carousel from './Carrusel'

// - UI
import Testimonial from '../../ui/Testimonial.astro'

// Data
import {carrusel} from '../../../data/json-files/data.js'

// Props
type Props = {
	blockquote?: string
	figcaption?: string
	cite?: string
	bg?: any
	bgPosition?: 'left' | 'right' | 'center'
}
const {
	blockquote = 'tESTIMONIAL BRINCANDO.',
	figcaption = 'Sheryl Sandberg',
	cite = 'CEO, Facebook',
	bg,
	bgPosition = 'center'
} = Astro.props

type CarruselItem = {
	blockquote: string;
	figcaption: string;
	cite: string;
	descripcion: string;
	bg: string;
	bgPosition: string;
	image: string;
};

const images = (carrusel.imagenes as CarruselItem[]).map(item => item.image);
 // Extraer las im√°genes del JSON
---

<Section
	id="carrosuel"
	mode="dark"
	bg={bg}
	bgPosition={bgPosition}
	classes="dark:border-t border-y border-neutral-800"
>
	<Row>
		<Col span="12">
			<Carousel images={images} />
		</Col>
	</Row>
</Section>
