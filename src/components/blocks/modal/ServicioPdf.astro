---
// Signup Modal
// ------------
// Description: A modal with a form to sign up.

// Components
// - UI
import Modal from '../../ui/ModalFull.astro'

// Props
type Props = {
	classes?: string
}
const pdfPath = (file: string, folder: string) => `/assets/servicios/${folder}/syllabus/${file}`;
const { classes } = Astro.props
---

<Modal id="serviciopdf" classes={classes} title="Servicio PDF">
	<iframe
        src={pdfPath('algebra.pdf', 'escolar')}
        title="PDF Viewer"
        width="100%"
        height="500px"
        frameborder="0"
        allowfullscreen
        class="w-full h-full"
    ></iframe>
</Modal>
